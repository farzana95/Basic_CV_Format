<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#def1f1"
    tools:context=".CV">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/logomini" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:text="My Resume"
        android:textColor="#12048c"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_gravity="center"
        android:weightSum="2" >

        <Button
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:id="@+id/personal"
            android:text="Personal Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/signup_button"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:id="@+id/career"
            android:text="Creer Objectives"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#17a5c1"
            android:background="@drawable/login_button"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_gravity="center"
        android:weightSum="2" >

        <Button
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:id="@+id/education"
            android:text="Educations"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#17a5c1"
            android:background="@drawable/login_button"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:id="@+id/experience"
            android:text="Experiences"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/signup_button"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_gravity="center"
        android:weightSum="2" >

        <Button
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:id="@+id/skill"
            android:text="Skills"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/signup_button"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:id="@+id/activity"
            android:text="Activities"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#17a5c1"
            android:background="@drawable/login_button"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_gravity="center"
        android:weightSum="2" >

        <Button
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:id="@+id/achievement"
            android:text="Achievements"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#17a5c1"
            android:background="@drawable/login_button"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:id="@+id/project"
            android:text="Projects"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/signup_button"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_gravity="center"
        android:weightSum="2" >

        <Button
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:id="@+id/participation"
            android:text="Participation"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/signup_button"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:id="@+id/reference"
            android:text="Reference"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#17a5c1"
            android:background="@drawable/login_button"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</LinearLayout>