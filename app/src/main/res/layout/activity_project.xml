<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f5f5"
    tools:context=".Project">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/logomini" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Projects"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#12048c"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▪ CONTACT MANAGEMENT SYSTEM"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#247196"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language: PHP, Database: MySQL, A desktop application for managing"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▪ ALUMNI MANAGEMENT SYSTEM"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#247196"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="·Language: JDBC, Database: MySQL, A desktop application for managing"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="▪ THESIS: Effects of Architecture on Neural Network Performance"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textColor="#247196" />

</LinearLayout>